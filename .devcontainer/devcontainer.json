{
  "name": "Renexus Development Environment",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  
  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": false,
        "python.linting.flake8Enabled": true,
        "python.formatting.provider": "black",
        "editor.formatOnSave": true,
        "editor.fontSize": 16,
        "editor.lineHeight": 1.6,
        "editor.wordWrap": "on",
        "workbench.colorTheme": "GitHub Dark Default",
        "terminal.integrated.fontSize": 14
      },
      "extensions": [
        "ms-python.python",
        "ms-python.flake8",
        "ms-python.black-formatter",
        "ms-toolsai.jupyter",
        "GitHub.copilot",
        "GitHub.vscode-pull-request-github",
        "ms-vscode.vscode-json"
      ]
    }
  },
  
  "postCreateCommand": "pip install -r requirements.txt && python -m spacy download en_core_web_sm",
  
  "forwardPorts": [5000, 8000],
  
  "remoteUser": "vscode",
  
  "mounts": [
    "source=${localWorkspaceFolder}/user_data,target=/workspaces/Renexus/user_data,type=bind,consistency=cached"
  ]
}
